{
  "name": "jwt-auth-learning-kit",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev:auth": "pnpm --filter ./apps/auth-server dev",
    "dev:resource": "pnpm --filter ./apps/resource-server dev",
    "dev": "npm-run-all --parallel dev:*",
    "build:auth": "pnpm --filter ./apps/auth-server build",
    "build:resource": "pnpm --filter ./apps/resource-server build",
    "build": "npm-run-all --parallel build:*",
    "docker:build": "docker build -t auth-server:latest -f ./apps/auth-server/Dockerfile .",
    "docker:run": "docker run --rm -p 3001:3001 --env-file ./apps/auth-server/.env --name my-auth-server auth-server:latest",
    "lint": "eslint \"{apps,packages}/**/*.{js,ts}\"",
    "lint:fix": "eslint \"{apps,packages}/**/*.{js,ts}\" --fix",
    "format": "prettier --write \"{apps,packages}/**/*.{js,ts,json,md}\""
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^24.0.3",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.1",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.35.0"
  }
}
